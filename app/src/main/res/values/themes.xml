<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeroMarket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/pink_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_500</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnSecondary">@color/pink_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="searchBarColor">@color/pink_100</item>
        <item name="smallComponentColor">@color/white</item>
        <item name="android:windowBackground">@color/pink_500</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TheX.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TheX.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TheX.LargeComponent</item>
    </style>

    <style name="Theme.AppLauncher" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/pink_500</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Component.TheX.EditText" parent="@android:style/Widget.Material.EditText">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="drawableTint">@color/pink_200</item>
        <item name="android:textColor">@color/pink_200</item>
        <item name="android:textColorHint">@color/pink_200</item>
    </style>

    <style name="Theme.NeroMarket.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:shadowColor" >@color/white</item>
        <item name="fontFamily">@font/forte</item>
    </style>

    <style name="Theme.NeroMarket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NeroMarket.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>